
;amostrados do canal 0 no modulo A/D no portal P1.
ORG 00H
LJMP INICIO
ORG 30H
INICIO: MOV DPTR,#0FFC5H
MOV A, #00H
MOVX @DPTR, A
LCALL TEMPO
MOVX A, @DPTR
LCALL TEMPO
MOV P1, A
LJMP INICIO
TEMPO: MOV R2, #10
 TEMPO2: MOV R1, #200
 TEMPO1: MOV R0, #250
DJNZ R0,$
DJNZ R1, TEMPO1
DJNZ R2, TEMPO2
RET
END
